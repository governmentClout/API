    "title": "Create Petition",
    "name": "createPetition",
    "group": "Petitions",
    "description": "<p>The endpoint creates a new petition</p>",
    "parameter": {
      "fields": {
        "Parameter": [
          {
            "group": "Parameter",
            "type": "String",
